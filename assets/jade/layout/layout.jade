include ../mixins/_helpers

- var pageTitle = "Bootstrap"
- var bodyClass = ""
block vars

doctype
html.no-js
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    title=pageTitle
    meta(name="viewport", content="width=device-width, initial-scale=1")
    meta(property="og:image", content="#{imagesBase}/opengraph-image.png")
    block headerMeta

    //[if gte IE 8]><!
    +stylesheetLinkTag("application","screen")
    //<![endif]

    +stylesheetLinkTag("print","print")

    link(rel="icon", type="image/png", href="#{imagesBase}/favicon.png")
    link(rel="shortcut icon", href="#{imagesBase}/favicon.ico", type="image/x-icon")
    //-<!-- For third-generation iPad with high-resolution Retina display: -->
    link(rel="apple-touch-icon-precomposed", sizes="144x144", href="#{imagesBase}/apple-touch-icon-144x144.png")
    //-<!-- For iPhone with high-resolution Retina display: -->
    link(rel="apple-touch-icon-precomposed", sizes="114x114", href="#{imagesBase}/apple-touch-icon-114x114.png")
    //-<!-- For first- and second-generation iPad: -->
    link( rel="apple-touch-icon-precomposed", sizes="72x72", href="#{imagesBase}/apple-touch-icon-72x72.png")
    //-<!-- For non-Retina iPhone, iPod Touch, and Android 2.1+ devices: -->
    link(rel="apple-touch-icon-precomposed", href="#{imagesBase}/apple-touch-icon-57x57.png")

    block headerScripts

  body(class="#{bodyClass}")

    script.
      document.documentElement.className = ((document.documentElement.className) ? document.documentElement.className + ' js-on' : 'js-on');

    .container
      include _nav_top
      .main
        block content

    script(src="#{javascriptsBase}/require.js", type="text/javascript", data-main="#{javascriptsBase}/main")

    block footerScripts